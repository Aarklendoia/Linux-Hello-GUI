#!/usr/bin/make -f
export DH_VERBOSE = 1
export PYBUILD_NAME = linux-hello-gui

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_install:
	dh_install
	mkdir -p debian/linux-hello-gui/usr/share/doc/linux-hello-gui
	cp debian/com.linux-hello.gui.policy debian/linux-hello-gui/usr/share/doc/linux-hello-gui/

override_dh_python3:
	dh_python3 --shebang=/usr/bin/python3
